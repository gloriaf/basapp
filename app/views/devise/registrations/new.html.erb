<% provide(:title, 'Sign up') %>
<div>
  <h1>Basic app | <%= yield(:title) %></h1>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :email %><br />
    <%= f.text_field :email, :autofocus => true %></div>
  
    <% if f.object.password_required? %>
      <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div>
    <% end %>
    
    <div class="field"><%= f.label :username %><br />
    <%= f.text_field :username %></div>

    <div>
      <%= f.submit "Sign up", class: "btn btn-large btn-primary" %><br />
    </div>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Login with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-large btn-primary"  %>
        <% end -%>
      <% end -%>
    <% end %>

  <%= render "devise/shared/links" %>
</div>